<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".CheckIn">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/check_in_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- ðŸ  Header Section -->
        <TextView
            android:id="@+id/current_cafe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currently_at"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/coffee_brown"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cafe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wheeler_s"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/current_cafe_title"
            android:layout_marginTop="4dp" />

        <!-- ðŸ“· Camera Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/camera_block"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:clickable="true"
            android:focusable="true"
            android:clipToOutline="true"
            app:cardBackgroundColor="@color/light_yellow"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/coffee_brown"
            app:strokeWidth="1dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cafe_name"
            app:layout_constraintBottom_toTopOf="@id/review_label">

            <ImageView
                android:id="@+id/camera_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="false"
                android:contentDescription="@string/review_captured_photo_content_description"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/camera_prompt_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/camera_icon"
                    app:tint="@color/coffee_brown" />

                <TextView
                    android:id="@+id/camera_tagline_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="@string/camera_tagline"
                    android:textColor="@color/coffee_brown"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ’¬ Review Text -->
        <TextView
            android:id="@+id/review_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review_header"
            android:textColor="@color/coffee_brown"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/camera_block"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/review_input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/round_input_box"
            android:hint="@string/review"
            android:gravity="top|start"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/review_label" />

        <!-- ðŸ·ï¸ Category Buttons -->
        <TextView
            android:id="@+id/category_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_tag_selection"
            android:textColor="@color/coffee_brown"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/review_input"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categories_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_label" />

        <!-- â­ Rating Bar -->
        <TextView
            android:id="@+id/rating_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rating"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/coffee_brown"
            app:layout_constraintTop_toBottomOf="@id/categories_recycle"
            app:layout_constraintStart_toStartOf="parent" />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/rating_label"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- ðŸ§¾ Submit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/post_btn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/post_now"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/coffee_brown"
            app:layout_constraintTop_toBottomOf="@id/rating_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

        <ProgressBar
            android:id="@+id/post_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/post_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>